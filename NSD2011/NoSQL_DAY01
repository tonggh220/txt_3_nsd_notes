  293  vim +65 /usr/local/nginx/conf/nginx.conf
        location ~ \.php$ {
            root           html;
            fastcgi_pass   127.0.0.1:9000;
            fastcgi_index  index.php;
            include        fastcgi.conf;
        }
：wq

[root@host51 nginx-1.12.2]# /usr/local/nginx/sbin/nginx  -t
